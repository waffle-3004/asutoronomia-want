<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PointActivity">

    <ImageView
        android:id="@+id/horizontalLineImage4"
        android:layout_width="368dp"
        android:layout_height="2dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recyclerView"
        app:srcCompat="@drawable/horizontal_line" />

    <ImageView
        android:id="@+id/homeImage4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/searchImage4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineImage4"
        app:srcCompat="@drawable/home_image" />

    <ImageView
        android:id="@+id/postImage4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/notificationImage4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/searchImage4"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineImage4"
        app:srcCompat="@drawable/post_image" />

    <ImageView
        android:id="@+id/notificationImage4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toStartOf="@+id/mypageImage4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/postImage4"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineImage4"
        app:srcCompat="@drawable/notification_image" />

    <ImageView
        android:id="@+id/mypageImage4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/notificationImage4"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineImage4"
        app:srcCompat="@drawable/mypage_image" />

    <ImageView
        android:id="@+id/searchImage4"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginTop="6dp"
        app:layout_constraintEnd_toStartOf="@+id/postImage4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/homeImage4"
        app:layout_constraintTop_toBottomOf="@+id/horizontalLineImage4"
        app:srcCompat="@drawable/search_image" />

    <TextView
        android:id="@+id/Point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="ポイント"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/possessionPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="◯◯◯pt"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Point" />

    <ImageView
        android:id="@+id/postHistory"
        android:layout_width="324dp"
        android:layout_height="43dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/possessionPoints"
        app:srcCompat="@drawable/post_history_image" />

    <ImageView
        android:id="@+id/cash"
        android:layout_width="324dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postHistory"
        app:srcCompat="@drawable/cash_image" />

    <TextView
        android:id="@+id/acquisitionHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="獲得履歴"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cash" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="407dp"
        android:layout_height="265dp"
        android:layout_marginTop="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/acquisitionHistory" />

</androidx.constraintlayout.widget.ConstraintLayout>